//- Landing page
    Content:
        - Opener Image
        - Login form

extends ../layout

block title
    title Weathertop

block content
    div.container-md
        div.row.pt-3
            div.col
                img.img-fluid(src = "/images/weather_Image_Opener.jpg")
                test
            div.col
                if registrationSuccessful
                    p.bg-success-subtle.p-2.rounded-2= registrationSuccessful
                if loginError
                    p.bg-danger-subtle.p-2.rounded-2= loginError
                form(action = "/login" method = "post")
                    div.form-group.p-2
                        label(for = "email") E-Mail:
                        input.form-control(type = "text", id = "email", name="email" required)
                    div.form-group.p-2
                        label(for="password") Passwort
                        input.form-control(type="password", id = "password", name = "password" required)
                    button.btn.btn-primary.p-2.m-2(type = "submit") Submit

